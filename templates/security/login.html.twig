{% extends 'base.html.twig' %}

{% block content %}

    <div class="col-md-8">
        <div id="register" class="box">

            <a href="{{ path('index') }}">Home</a> | <a href="{{ path('app_logout') }}">Log Out</a>
            <hr/>

            <h2>Sign In</h2>

          <form action="{{ path('app_login') }}" method="post">
              <input type="text" name="_username" placeholder="Your Username">
              <input type="password" name="_password" placeholder="Your Password">
              <button type="submit" role="button">Log In</button>
          </form>

        </div>
    </div>
{% endblock %}

